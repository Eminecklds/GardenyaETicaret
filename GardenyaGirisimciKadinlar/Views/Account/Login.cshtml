@using GardenyaGirisimciKadinlar.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class=" bg-gra-02 p-t-130 p-b-100 font-poppins">
    <div class="wrapper wrapper--w540">
        <div class="card card-4">
            <div class="card-body2">
                <h2 class="title">Giriş Yap</h2>
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="row row-space">
                        <div class="col-2">
                            <div class="input-group center-block">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                @Html.LabelFor(m => m.Email, new { @class = "label" })

                                @Html.TextBoxFor(m => m.Email, new { @class = "input--style-5" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row row-space">
                        <div class="col-2">
                            <div class="input-group">
                                @Html.LabelFor(m => m.Password, new { @class = "label" })

                                @Html.PasswordFor(m => m.Password, new { @class = "input--style-5" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>


                        </div>
                       
                    </div>

                    <div class="row ">
                        
                        <div class="remember"> 
                        @Html.CheckBoxFor(m => m.RememberMe)
                        </div>
                        <div class="label">
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                        
                    </div>
                        <div class="p-t-15">
                            <input type="submit" value="Giriş" class="btn btn--radius-2 btn--blue " />
                        </div>
                        <p class="login">
                            @Html.ActionLink("Kullanıcı Olarak Üye Ol", "Register", "Account", routeValues: new { id = 0 }, htmlAttributes: null)
                        </p>                        
                        <p class="login" style="margin-left:5px;">
                            @Html.ActionLink("Girişimci Olarak Üye Ol", "Register" ,"Account", routeValues: new { id = 1 }, htmlAttributes: null)
                        </p>
                        @* Enable this once you have account confirmation enabled for password reset functionality
        <p>
            @Html.ActionLink("Forgot your password?", "ForgotPassword")
        </p>*@
                    }

                    </div>
            </div>
            </div>
            </div>


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
