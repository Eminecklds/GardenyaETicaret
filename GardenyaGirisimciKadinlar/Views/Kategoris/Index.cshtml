@model IEnumerable<GardenyaGirisimciKadinlar.Models.Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="fw-title">Kategoriler</h3>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KategoriLink)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriLink)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.KategoriID }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.KategoriID }) |
                @Html.ActionLink("Alt Kategoriler", "Details", new { id = item.KategoriID })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Kategori Oluştur", "Create")
</div>
